<p id="notice"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <%= @train.number %>
</p>

<p>
  <% if @train.route %>
    <strong> Поезд на маршруте:</strong> <%= @train.route.name %>
  <% else %>
  	У поезда нет маршрута
  <% end %>  
</p>

<p>
  <strong>Вагоны:</strong>
    <ul>
      <% if @train.sort == "head" %>
          <% @train.railway_carriages.head.each do |carriage| %>
            <li><%= link_to carriage.number, carriage %></li>
          <% end %>
        <% else %>
          <% @train.railway_carriages.end.each do |carriage| %>
            <li><%= link_to carriage.number, carriage %></li>
          <% end %>          
      <% end %>
    </ul>        
</p>

<%= link_to 'Edit', edit_train_path(@train) %> |
<%= link_to 'Back', trains_path %>
