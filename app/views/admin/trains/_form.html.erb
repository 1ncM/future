<%= form_with(model: [:admin, train], local: true, id: train.new_record? ? "new_train" : "edit_train_#{train.id}", html: { style: "display: #{hidden ? 'none' : 'block'}" }) do |form| %>
  <%= render "common/errors", resource: train %>

  <div class="field">
    <%= form.label :number %>
    <%= form.number_field :number, id: :train_number %>
  </div>

  <div class="field">
    <%= form.label :route %>
    <%= form.collection_select :route_id, Route.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :sort, "Сортировка вагонов" %>
    <%= form.select(:sort, [["с головы поезда","head"], ["с хвоста поезда","end"]]) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
