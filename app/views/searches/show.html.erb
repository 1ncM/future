<h1>Страница Поиска Билетов</h1>
		<%= puts "SENDGRID_USERNAME: #{ENV['SENDGRID_USERNAME']}" %>
		<%= puts "SENDGRID_PASSWORD: #{ENV['SENDGRID_PASSWORD']}" %>

<div class="row">
	<%= form_tag new_search_path, method: :get do %>
	<div class="col-md-4">
		<%= collection_select :search, :first_station_id, @stations, :id, :title, {}, class: 'form-control' %>
	</div>
	<div class="col-md-4">
		<%= collection_select :search, :last_station_id, @stations, :id, :title, {}, class: 'form-control' %>
	</div>
	<div class="col-md-4">
		<%= submit_tag 'Поиск', class: 'btn btn-primary'%>		
	</div>
</div>
<% end %>