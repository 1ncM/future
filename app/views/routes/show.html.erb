<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @route.name %>
</p>

<p>
  <% if @route.trains.empty? %>	
    На маршруте нет поездов
  <% else %>
    <strong>Поезда на маршруте:</strong>
    <% @route.trains.each do |train| %>
      <ul>
        <li><%= train.number %></li>
      </ul>
    <% end %>
  <% end %>
</p>

<p>
  <table>
    <thead>
      <tr>
        <td><strong>Станции маршрута:</strong></td>
        <td>Позиция:</td>
      </tr>
    </thead>
    <tbody>
      <% @route.railway_stations.each do |station| %>
        <tr>

        </tr>
      <% end %>
    </tbody>
  </table>
</p>

<%= link_to 'Edit', edit_route_path(@route) %> |
