<%= form_with(model: [@train, railway_carriage.becomes(RailwayCarriage)], local: true) do |form| %>
  <%= render "common/errors", resource: railway_carriage %>

  <div class="field">
    <%= form.label :type, 'Тип вагона' %>
    <%= form.select(:type, [:CoupeCarriage, :EconomyCarriage, :SwCarriage, :SedentaryCarriage]) %>
  </div>

  <div class="field">
    <%= form.label :train, 'Поезд' %>
    <%= form.collection_select :train_id, Train.all, :id, :number %>
  </div>

  <div class="field">
    <%= form.label :top_seats, 'Верхних мест' %>
    <%= form.text_field :top_seats, id: :railway_carriage_top_seats %>
  </div>

  <div class="field">
    <%= form.label :bottom_seats, 'Нижних мест' %>
    <%= form.text_field :bottom_seats, id: :railway_carriage_bottom_seats %>
  </div>

  <div class="field">
    <%= form.label :side_top_seats, 'Верхних боковых мест' %>
    <%= form.text_field :side_top_seats, id: :railway_carriage_side_top_seats %>
  </div>

  <div class="field">
    <%= form.label :side_bottom_seats, 'Нижних боковых мест' %>
    <%= form.text_field :side_bottom_seats, id: :railway_carriage_side_bottom_seats %>
  </div>

  <div class="field">
    <%= form.label :seat_places, 'Сидячих мест' %>
    <%= form.text_field :seat_places, id: :railway_carriage_seat_places %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
